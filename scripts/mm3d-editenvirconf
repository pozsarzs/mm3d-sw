#CFGFILE="/etc/mm3d/envir.ini"
CFGFILE="/usr/local/etc/mm3d/envir.ini"
if [ ! -f $CFGFILE ]
then
  echo "ERROR: Cannot open configuration file!"
exit 1
fi

sudo mm3d-editenvirconf.bin $CFGFILE
if [ $? -eq 0 ]
then
  mm3d-stopdaemon
  mm3d-startdaemon
fi
exit 0
